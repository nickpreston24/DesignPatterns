      <Code Language="csharp" Delimiter="$"><![CDATA[ /// <summary>
    /// Optional Color changer for progress bars
    /// </summary>
    public class ProgressbarForegroundConverter : IValueConverter
    {
        public object Convert(object value, Type targetType, object parameter, CultureInfo culture)
        {
            double progress = (double)value;
            Brush foreground = Brushes.DarkRed;
            if (progress == 100d)
                foreground = Brushes.Green;
            else if (progress >= 90d)
                foreground = Brushes.LightGreen;
            else if (progress >= 80d)
                foreground = Brushes.Yellow;
            else if (progress >= 60d)
                foreground = Brushes.Orange;
            else if (progress >= 40d)
                foreground = Brushes.OrangeRed;
            else if (progress >= 20d)
                foreground = Brushes.Red;
            return foreground;
        }
        public object ConvertBack(object value, Type targetType, object parameter, CultureInfo culture)
        {
            //throw new NotImplementedException();
            return value; //do nothing, we don't ever convert back progress color
        }
    }]]></Code>
